<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <link rel="stylesheet" href="feed/css/all.min.css" />
    <link rel="stylesheet" href="feed/css/framework.css" />
    <link rel="stylesheet" href="feed/css/master.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;500&#038;display=swap"
      rel="stylesheet"
    />

    <link
      rel="icon"
      href="/css/login/images/icons/home.ico"
      type="image/x-icon"
    />
  </head>

  <body>
    <%- include('./partials/_header') %> <%- include('partials/_navbar') %>
    <div class="block-31" style="position: relative">
      <div class="owl-carousel loop-block-31">
        <div
          class="block-30 block-30-sm item"
          style="background-image: url('images/bg_2.jpg')"
          data-stellar-background-ratio="0.5"
        >
          <div class="container">
            <div
              class="row align-items-center justify-content-center text-center"
            >
              <div class="col-md-7">
                <h2 class="heading mb-5">SMA CONNECT</h2>
                <p style="display: inline-block">
                  <a
                    href="https://www.youtube.com/watch?v=0h5fBdQJfTo&pp=ygULc21hIHBhdGllbnQ%3D"
                    data-fancybox
                    class="ftco-play-video d-flex"
                    ><span class="play-icon-wrap align-self-center mr-4"
                      ><span class="ion-ios-play"></span
                    ></span>
                    <span class="align-self-center">What is SMA?</span></a
                  >
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="page d-flex">
      <div class="content w-full">
        <!-- Start Head -->
        <div class="head bg-white p-15 between-flex"></div>
        <!-- End Head -->
        <h1 class="p-relative">Patients</h1>
        <div class="friends-page d-grid m-20 gap-20">
          <!--burasi-->
          <% if (campaigns) { %> <% campaigns.forEach(campaign => { %>
            
          <div class="friend bg-white rad-6 p-20 p-relative">
            <div class="txt-c">
              <img
                decoding="async"
                class="rad-half mt-10 mb-10 w-100 h-100"
                src="feed/imgs/patient.jpg"
                alt=""
              />
              <h4 class="m-0">
                <%= campaign.user.firstName + " " + campaign.user.lastName %>
              </h4>
              <p class="c-grey fs-13 mt-5 mb-0 description-limit"><%= campaign.description %></p>
            </div>
            <div class="icons fs-14 p-relative">
              <div class="mb-10">
                <i class="fa-regular fa-face-smile fa-fw"></i>
                <span><%= campaign.donators.length %> Donation(s)</span>
              </div>
              <div>
                <span>
                  <div class="progress-bg">
                    <div class="progress-bar">
                      <h3 class="raised">
                        <%= campaign.current %>&nbsp;raised
                      </h3>
                    </div>

                    <h3 class="goal">Goal: <%= campaign.need %></h3>
                  </div>
                </span>
              </div>
            </div>
            <div class="info between-flex fs-13">
              <div>
                <a
                class="bg-blue c-white btn-shape"
                href="/campaign/<%= campaign._id %>"
                >Details</a
              >
                <% if (campaign.isDone === false) {%>
                 
                <a
                  class="bg-red c-white btn-shape"
                  href="/donation/<%= campaign._id %>"
                  >Donate</a
                >
                <% } else {%>
                  <p
                  class="bg-custom c-white btn-shape"
                  >Done</p

                  
                >
                <% } %>
              </div>
            </div>
          </div>
          <% }) %> <% } %>
          <!--burasi-->
        </div>
      </div>
    </div>
  </body>
</html>

